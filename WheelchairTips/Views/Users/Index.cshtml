@model IEnumerable<UserListViewModel>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_CustomLayout";
}

    <div id="master-wrap">
        <h1>Users</h1>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td><a asp-action="EditUser" asp-route-id="@item.Id">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>

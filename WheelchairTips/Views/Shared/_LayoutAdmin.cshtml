<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WheelchairTips</title>

    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <environment names="Development">
        <link rel="stylesheet" href="~/css/style.css" />
    </environment>
</head>
<body class="admin">
    <nav class="head blue-grey darken-3">
        <div class="nav-wrapper container">
            <a href="/Home" class="brand-logo"><i class="material-icons">accessible</i><i class="material-icons">accessibility</i>WheelchairTips.com - ADMIN</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                @await Html.PartialAsync("_LoginPartial")
            </ul>
        </div>
    </nav>

    <ul id="slide-out" class="side-nav fixed">
        <nav-link asp-controller="Categories" asp-action="Index">
            <a asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
        </nav-link>

        <nav-link asp-controller="ManageTips" asp-action="Index">
            <a asp-area="" asp-controller="ManageTips" asp-action="Index">Tips</a>
        </nav-link>

        <li><a href="#!">Second Sidebar Link</a></li>
    </ul>

    <main>
        <div class="container content">
            @RenderBody()
        </div>
    </main>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {
            $('select').material_select();
        });

        console.log("init wheelchair tips");
    </script>
</body>
</html>
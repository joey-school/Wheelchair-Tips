@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WheelchairTips</title>

    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <environment names="Development">
        <link rel="stylesheet" href="~/css/style.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    @Html.Raw(JavaScriptSnippet.FullScript)
</head>
<body class="admin">
    <nav class="head blue-grey darken-3">
        <div class="nav-wrapper container">
            <a href="/Home" class="brand-logo"><i class="material-icons">accessible</i>WheelchairTips.com - ADMIN</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                @await Html.PartialAsync("_LoginPartial")
            </ul>
        </div>
    </nav>

    <ul id="slide-out" class="side-nav fixed">
            <nav-link asp-controller="Categories" asp-action="Index">
                <a asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
            </nav-link>
        <li><a href="#!">Second Sidebar Link</a></li>
</ul>

    

    <main>
        <div class="container content">

            @RenderBody()

        </div>
    </main>

    <environment names="Development">

    </environment>
    <environment names="Staging,Production">

        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

    <script>
        // Write your Javascript code.
        $(document).ready(function () {
            $('select').material_select();
        });

        console.log(8);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

@model WheelchairTips.Models.Tip

@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Create Tip";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for="Id" />

    <label asp-for="Title"></label>
    <input asp-for="Title" />
    <span asp-validation-for="Title" class="text-danger"></span>

    <label asp-for="Content"></label>
    <textarea asp-for="Content" rows="5"></textarea>
    <span asp-validation-for="Content" class="text-danger"></span>

    <div class="image-upload">
        <label asp-for="ImageName"></label>
        <img src="~/uploads/img/@Model.ImageName" asp-append-version="true" />
        <input type="file" name="files" multiple />
        <span asp-validation-for="ImageName" class="text-danger"></span>
    </div>

    <label asp-for="CategoryId"></label>
    <select asp-for="CategoryId" asp-items="ViewBag.CategoryId"></select>

    <input type="submit" value="Save" class="btn crud" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
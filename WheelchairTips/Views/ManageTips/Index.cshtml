@model IEnumerable<WheelchairTips.Models.Tip>

@{
    Layout = "_LayoutDashboard";
    ViewData["Title"] = "Manage Tips";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            
            @if (User.IsInRole(Constants.ContactAdministratorsRole))
            {
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser.Email)
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                @if (User.IsInRole(Constants.ContactAdministratorsRole))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
                    </td>
                }

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>

                <td>
                    @*<form asp-action="Disable">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <input type="submit" value="Disable" class="btn blue" />
                    </form>*@

                    <form asp-action="Disable" class="disable-tip-toggle">
                        <div class="switch">
                            <label>
                                Active
                                <input type="hidden" name="Id" value="@item.Id" />
                                @if (!item.IsDisabled)
                                {
                                    <input type="checkbox">
                                }
                                @if (item.IsDisabled)
                                {
                                    <input type="checkbox" checked>
                                }
                                <span class="lever"></span>
                                Disabled
                            </label>
                        </div>
                    </form>
                </td>

                <td>
                    <form asp-action="Delete">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <input type="submit" value="Delete" class="btn red" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


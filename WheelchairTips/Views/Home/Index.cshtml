@using WheelchairTips.Models;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_CustomLayout";

    List<Tip> tips = ViewData["Tips"] as List<Tip>;
    List<Category> categories = ViewData["Categories"] as List<Category>;
}

<div id="master-wrap">
    <h1>Here are some handy tips.</h1>
    
    @foreach (var item in categories)
    {    
        <p>
            @Html.DisplayFor(modelItem => item.Name)
        </p>
    }

    <div class="tips">
        @foreach (var item in tips)
        {
            <div class="tip">
                <p>
                    @Html.DisplayFor(modelItem => item.Title)
                </p>

                <a asp-controller="Tips" asp-action="Details" asp-route-id="@item.ID">Details</a>
            </div>
        }
    </div>
</div>